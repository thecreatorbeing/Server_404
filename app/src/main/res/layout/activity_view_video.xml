<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewVideoActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/actViewTiktokImgPause"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/white"
        android:contentDescription="@string/TODO"
        android:elevation="1dp"
        android:src="@android:drawable/ic_media_pause"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/actViewTiktokVideoView"
        app:layout_constraintEnd_toEndOf="@+id/actViewTiktokVideoView"
        app:layout_constraintStart_toStartOf="@+id/actViewTiktokVideoView"
        app:layout_constraintTop_toTopOf="@+id/actViewTiktokVideoView"
        app:tint="@color/white" />

    <VideoView
        android:id="@+id/actViewTiktokVideoView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/actViewTiktokTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/actViewTiktokTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_round_corners"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/actViewTiktokProgress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/actViewTiktokVideoView"
        app:layout_constraintEnd_toEndOf="@+id/actViewTiktokVideoView"
        app:layout_constraintStart_toStartOf="@+id/actViewTiktokVideoView"
        app:layout_constraintTop_toTopOf="@+id/actViewTiktokVideoView" />

</androidx.constraintlayout.widget.ConstraintLayout>