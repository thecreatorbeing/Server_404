<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="15dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="3dp"
    app:cardBackgroundColor="@color/color_60"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/fragHomeImgPost"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:contentDescription="@string/TODO"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragHomeTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.6"
            android:background="@drawable/shape_round_corners"
            android:backgroundTint="@color/color_30"
            android:gravity="center"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/fragHomeTextTitle"
            app:layout_constraintEnd_toEndOf="@+id/fragHomeImgPost"
            tools:ignore="HardcodedText" />

        <ProgressBar
            android:id="@+id/fragHomeProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="5dp"
            android:indeterminateTint="@color/color_10"
            app:layout_constraintBottom_toTopOf="@+id/fragHomeTextTitle"
            app:layout_constraintEnd_toEndOf="@+id/fragHomeTextTitle"
            app:layout_constraintStart_toStartOf="@+id/fragHomeTextTitle" />

        <TextView
            android:id="@+id/fragHomeTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_30"
            android:gravity="center"
            android:padding="5dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragHomeImgPost"
            tools:ignore="HardcodedText,TextContrastCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>